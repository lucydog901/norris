

<div class="hero">
  <div class="frosty">
    <h1 align="left">Chuck Norris Facts</h1>
    <p align="left">A compendium of Chuck Norris facts of questionable validity, and unquestionable profanity.</p>
  </div>

   <div class="row">
    <div class="frosty col-10 offset-1 text-center">
    
      <div class="mx-auto mt-5" style="width: 400px">
        <p>Search these unproven facts by keyword, or refresh the page to display a random fact.</p>
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :keyword, 'Search for a keyword '%>
            <%= text_field_tag :keyword, nil, placeholder: 'Eg. Cats', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
          <div class="col-lg-12 mt-5">
            <% if flash[:alert] %>
              <div class="alert alert-warning"><%= flash[:alert] %></div>
            <% end %>

            
        <% end %>
      </div>
    </div>
</div>




<div class="container">
  <div class="row">
  <div class="col-lg-12 mt-5" style='background-color: white'>
      <div class="mx-auto mt-5" style="width: 600px">
        <% if @jokes %>
          <% @jokes.each do |joke| %>
            <p><%= joke["value"] %></p>
          <% end %>
        <% end %>
      </div>
    </div>
    </div>
    </div>
